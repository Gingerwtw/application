<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_brown">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".activity.QuestionnaireActivity"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:id="@+id/toolbar"
            android:gravity="center_vertical">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/questionnaire_toolbar_back"
                android:src="@drawable/toolbar_back"
                android:layout_marginStart="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/face_toolbar_title"
                android:text="问卷调查"
                android:layout_marginStart="30dp"
                android:textSize="23sp"
                android:textColor="@color/brown"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/questionnaire_list_bg"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="您面色晦暗或容易出现褐斑吗？"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:paddingBottom="15dp"/>

            <RadioGroup
                android:id="@+id/radioGroup_first"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radio_first_yes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="是"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/radio_first_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="100dp"
                    android:text="否"
                    android:textColor="@color/black"
                    android:textSize="16sp" />
            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/questionnaire_list_bg"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="您容易有黑眼圈吗？"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:paddingBottom="15dp"/>

            <RadioGroup
                android:id="@+id/radioGroup_second"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >
                <RadioButton
                    android:id="@+id/radio_second_yes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="是"
                    android:textColor="@color/black"
                    android:textSize="16sp"/>

                <RadioButton
                    android:id="@+id/radio_second_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="否"
                    android:textColor="@color/black"
                    android:layout_marginLeft="100dp"
                    android:textSize="16sp"/>
            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/questionnaire_list_bg"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="您有额部油脂分泌多的现象吗？"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:paddingBottom="15dp"/>

            <RadioGroup
                android:id="@+id/radioGroup_third"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >
                <RadioButton
                    android:id="@+id/radio_third_yes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="是"
                    android:textColor="@color/black"
                    android:textSize="16sp"/>

                <RadioButton
                    android:id="@+id/radio_third_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="否"
                    android:textColor="@color/black"
                    android:layout_marginLeft="100dp"
                    android:textSize="16sp"/>
            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/questionnaire_list_bg"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="您面部或鼻部有油腻感或者油亮发光吗？"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:paddingBottom="10dp"/>

            <RadioGroup
                android:id="@+id/radioGroup_forth"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radio_forth_yes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="是"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:shadowColor="@color/brown"/>

                <RadioButton
                    android:id="@+id/radio_forth_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="否"
                    android:textColor="@color/black"
                    android:layout_marginLeft="100dp"
                    android:textSize="16sp"/>
            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/questionnaire_list_bg"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="您容易生痤疮或疮疖吗？"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:paddingBottom="15dp"/>

            <RadioGroup
                android:id="@+id/radioGroup_fifth"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >
                <RadioButton
                    android:id="@+id/radio_fifth_yes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="是"
                    android:textColor="@color/black"
                    android:textSize="16sp"/>

                <RadioButton
                    android:id="@+id/radio_fifth_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="否"
                    android:textColor="@color/black"
                    android:layout_marginLeft="100dp"
                    android:textSize="16sp"
                    />
            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/questionnaire_list_bg"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="您的皮肤在不知不觉中会出现青紫瘀斑(皮下出血)吗？"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:paddingBottom="10dp"/>

            <RadioGroup
                android:id="@+id/radioGroup_sixth"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >
                <RadioButton
                    android:id="@+id/radio_sixth_yes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="是"
                    android:textColor="@color/black"
                    android:textSize="16sp"/>

                <RadioButton
                    android:id="@+id/radio_sixth_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="否"
                    android:textColor="@color/black"
                    android:layout_marginLeft="100dp"
                    android:textSize="16sp"
                    />
            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/questionnaire_list_bg"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="您感到口苦或嘴里有异味吗？"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:paddingBottom="15dp"/>

            <RadioGroup
                android:id="@+id/radioGroup_seventh"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >
                <RadioButton
                    android:id="@+id/radio_seventh_yes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="是"
                    android:textColor="@color/black"
                    android:textSize="16sp"/>

                <RadioButton
                    android:id="@+id/radio_seventh_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="否"
                    android:textColor="@color/black"
                    android:layout_marginLeft="100dp"
                    android:textSize="16sp"
                    />
            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/questionnaire_list_bg"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="您感到眼睛干涩吗？"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:paddingBottom="15dp"/>

            <RadioGroup
                android:id="@+id/radioGroup_eighth"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >
                <RadioButton
                    android:id="@+id/radio_eighth_yes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="是"
                    android:textColor="@color/black"
                    android:textSize="16sp"/>

                <RadioButton
                    android:id="@+id/radio_eighth_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="否"
                    android:textColor="@color/black"
                    android:layout_marginLeft="100dp"
                    android:textSize="16sp"
                    />
            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/questionnaire_list_bg"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="您感到口舌干燥总想喝水吗？"

                android:textSize="18sp"
                android:textColor="@color/black"
                android:paddingBottom="15dp"/>

            <RadioGroup
                android:id="@+id/radioGroup_ninth"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >
                <RadioButton
                    android:id="@+id/radio_ninth_yes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="是"
                    android:textColor="@color/black"
                    android:textSize="16sp"/>

                <RadioButton
                    android:id="@+id/radio_ninth_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="否"
                    android:textColor="@color/black"
                    android:layout_marginLeft="100dp"
                    android:textSize="16sp"
                    />
            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/questionnaire_list_bg"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="您容易精神紧张、焦虑不安吗？"

                android:textSize="18sp"
                android:textColor="@color/black"
                android:paddingBottom="15dp"/>

            <RadioGroup
                android:id="@+id/radioGroup_tenth"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >
                <RadioButton
                    android:id="@+id/radio_tenth_yes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="是"
                    android:textColor="@color/black"
                    android:textSize="16sp"/>

                <RadioButton
                    android:id="@+id/radio_tenth_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="否"
                    android:textColor="@color/black"
                    android:layout_marginLeft="100dp"
                    android:textSize="16sp"
                    />
            </RadioGroup>

        </LinearLayout>

        <com.xuexiang.xui.widget.textview.supertextview.SuperButton
            android:id="@+id/btn_questionnaire_submit"
            style="@style/SuperButton.Primary.Login"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            app:sSelectorNormalColor="@color/brown"
            app:sSelectorPressedColor="@color/brown"
            android:text="完成" />

    </LinearLayout>
</ScrollView>


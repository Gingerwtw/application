<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.QuestionnaireInfoActivity"
    android:orientation="vertical"
    android:background="@drawable/login_background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginTop="230dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/questionnaire_bg">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginStart="60dp"
            android:layout_marginEnd="60dp"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:lineSpacingExtra="10dp"
            android:text="接下来需要您填写一份问卷，该问卷会起到辅助检测的作用。如果您暂时不想填写，可以点击跳过。"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_marginTop="20dp">

        <com.xuexiang.xui.widget.textview.supertextview.SuperButton
            style="@style/SuperButton.Primary.Login"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:id="@+id/questionnaire_info_confirm"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp"
            android:text="@string/btn_confirm"
            android:textSize="16sp"
            app:sSelectorNormalColor="@color/brown"
            app:sSelectorPressedColor="@color/brown"/>

        <com.xuexiang.xui.widget.textview.supertextview.SuperButton
            style="@style/SuperButton.Primary.Login"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:id="@+id/questionnaire_info_jump"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp"
            android:text="跳过"
            android:textSize="16sp"
            app:sSelectorNormalColor="@color/brown"
            app:sSelectorPressedColor="@color/brown"/>
    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.QuestionnaireInfoActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:lineSpacingExtra="10dp"
            android:text="接下来需要您填写一份问卷，该问卷会起到辅助检测的作用。如果您暂时不想填写，可以点击跳过。"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:padding="10dp">

        <com.xuexiang.xui.widget.textview.supertextview.SuperButton
            style="@style/SuperButton.Primary.Login"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:id="@+id/questionnaire_info_confirm"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:text="@string/btn_confirm"
            android:textSize="16sp"/>

        <com.xuexiang.xui.widget.textview.supertextview.SuperButton
            style="@style/SuperButton.Primary.Login"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:id="@+id/questionnaire_info_jump"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:text="跳过"
            android:textSize="16sp"/>
    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:id="@+id/toolbar"
        android:gravity="center_vertical">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/comprehensive_toolbar_back"
            android:src="@drawable/ic_web_back"
            android:layout_marginStart="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/comprehensive_toolbar_title"
            android:text="综合分析"
            android:layout_marginStart="30dp"
            android:textSize="23sp"
            android:textColor="@color/white"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请依次进行以下检查分析"
            android:layout_marginTop="80dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="50dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp">

            <com.xuexiang.xui.widget.textview.supertextview.SuperButton
                style="@style/SuperButton.Primary.Login"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:id="@+id/comprehensive_btn_questionnaire"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="30dp"
                android:text="健康问卷"
                android:textSize="16sp"/>

            <com.xuexiang.xui.widget.textview.supertextview.SuperButton
                style="@style/SuperButton.Primary.Login"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="120dp"
                android:id="@+id/comprehensive_btn_tongue"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="30dp"
                android:text="舌象"
                android:textSize="16sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="80dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp">

            <com.xuexiang.xui.widget.textview.supertextview.SuperButton
                style="@style/SuperButton.Primary.Login"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:id="@+id/comprehensive_btn_face"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="30dp"
                android:text="面象"
                android:textSize="16sp"/>

            <com.xuexiang.xui.widget.textview.supertextview.SuperButton
                style="@style/SuperButton.Primary.Login"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="120dp"
                android:id="@+id/comprehensive_btn_lung_volume"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="30dp"
                android:text="肺音"
                android:textSize="16sp"/>

        </LinearLayout>

        <com.xuexiang.xui.widget.textview.supertextview.SuperButton
            android:id="@+id/comprehensive_btn_submit"
            style="@style/SuperButton.Primary.Login"
            android:layout_marginTop="50dp"
            android:text="提交分析" />
    </LinearLayout>



</LinearLayout>
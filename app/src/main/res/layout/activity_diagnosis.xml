<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.DiagnosisActivity"
    android:orientation="vertical"
    android:background="@drawable/lung_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/toolbar"
        android:gravity="center_vertical">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/diagnosis_toolbar_back"
            android:src="@drawable/toolbar_back"
            android:layout_marginStart="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/face_toolbar_title"
            android:text="综合分析"
            android:layout_marginStart="30dp"
            android:textSize="23sp"
            android:textColor="@color/brown"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/diagnosis_face_tongue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/toolbar"
        android:layout_marginTop="50dp"
        android:paddingStart="30dp"
        android:paddingEnd="30dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal"
            android:background="@color/brown">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="体质特征"
                android:textColor="@color/white"
                android:layout_centerInParent="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:background="@color/white">

            <TextView
                android:id="@+id/diagnosis_constitution_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:text="体质特征"
                android:textColor="@color/xui_btn_blue_normal_color" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal"
            android:background="@color/brown">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="健康指数"
                android:layout_centerInParent="true"
                android:textColor="@color/white"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="健康指数"
                android:id="@+id/diagnosis_health_index_data"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:textColor="@color/black"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal"
            android:background="@color/brown">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="调理建议"
                android:layout_centerInParent="true"
                android:textColor="@color/white"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/diagnosis_advice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"
                android:text="调理建议"
                android:textColor="@color/black" />

        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/diagnosis_face_tongue_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="未完成舌象和面象分析"
        android:paddingStart="10dp"
        android:paddingTop="20dp"
        android:layout_below="@+id/toolbar"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:textColor="@color/black"/>

    <LinearLayout
        android:id="@+id/diagnosis_lung"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/diagnosis_face_tongue"
        android:layout_marginTop="50dp"
        android:paddingStart="30dp"
        android:paddingEnd="30dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal"
            android:background="@color/brown">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="肺音分析"
                android:textColor="@color/white"
                android:layout_centerInParent="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="肺音分析"
                android:id="@+id/diagnosis_lung_data"
                android:textColor="@color/xui_btn_blue_normal_color"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"/>

        </RelativeLayout>


    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="未完成肺音分析"
        android:paddingStart="10dp"
        android:paddingTop="50dp"
        android:layout_below="@+id/diagnosis_face_tongue"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:textColor="@color/black"/>

</RelativeLayout>